{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-native",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "paths": {
      "@betterat/core": ["../core/src"],
      "@betterat/core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
