{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@betterat/core": ["../../packages/core/dist"],
      "@betterat/core/*": ["../../packages/core/dist/*"],
      "@betterat/ui": ["../../packages/ui/dist"],
      "@betterat/ui/*": ["../../packages/ui/dist/*"],
      "@betterat/domain-sdk": ["../../packages/domain-sdk/dist"],
      "@betterat/domain-sdk/*": ["../../packages/domain-sdk/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
